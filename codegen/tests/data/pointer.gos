package main

type Node struct{
    i int
    j string
}

func main() {
    a := 1
    b := &a
    *b = 2
    assert(2 == a)

    f := func() *int {
        return &a
    }

    d := f()
    e := *d
    assert(a == e)

    var n, n2 Node
    n.i = 1
    n2.i = 222
    m := &n
    *m = n2
    assert(n.i == 222)
    assert(m.i == 222)
    m.i = 333
    m.j = "abc"
    assert(n.i == 333)
    assert(n.j == "abc")

    sl1 := []int{1,2}
    sl2 := sl1
    assert(sl2[0] == 1) 
    i := 3
    psl := &sl2[i-3]
    *psl = 3
    assert(sl1[0] == 3) 
}